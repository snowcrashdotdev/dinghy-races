{{form_start(form)}}
    <div id="game-form-list" class="game-form-list">
    {% for gameField in form.games %}
        <span class="game-form-list-item" data-input-id="{{gameField.vars.id}}">{{gameField.vars.value}}</span>
    {% else %}
        <p id="game-form-no-items">No games selected.</p>
    {% endfor %}
    </div>
    {{form_row(form.games)}}
    <div class="positioned">
        <input class="ajax-search" data-entity="game" data-field="name" data-cb="addGameToCollection" placeholder="Search">
    </div>
    <button>{{ button_label|default('Save') }}</button>
{{form_end(form)}}