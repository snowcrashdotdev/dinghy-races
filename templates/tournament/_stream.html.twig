{% set endpoint = path('stream_kit', {
    'user': query.username,
    'tournament': tournament.id
}) %}

<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" type="text/css" href="{{asset('css/dist/stream.min.css')}}">
    </head>
    <body data-endpoint="{{endpoint}}">
        {% verbatim %}
        <main id="stream-kit">
            <article class="gadget my-scores">
                <h3>My High Scores</h3>
                <ul class="score-list">
                    <li class="score" v-for="score in scores">
                        <span class="score-rank">{{score.rank}}</span>
                        <span class="score-game">{{score.game.name}}</span>
                        <span class="score-points">{{score.points|number_format}}</span>
                    </li>
                </ul>
            </article>

            <article class="gadget my-stats">
                <h3>Personal Stats</h3>
                <ul class="stats-list">
                    <li class="stat">
                        <span class="stat-label">Rank</span>
                        <span class="stat-value">{{stats.rank|number_format}}
                    </li>
                    <li class="stat">
                        <span class="stat-label">Ranked Points</span>
                        <span class="stat-value">{{stats.ranked_points|number_format}}
                    </li>
                    <li class="stat">
                        <span class="stat-label">Avg Score Rank</span>
                        <span class="stat-value">{{stats.avg_rank|number_format}}</span>
                    </li>
                    <li class="stat">
                        <span class="stat-label">Completion</span>
                        <span class="stat-value">{{stats.completion|number_format}}%</span>
                    </li>
                </ul>
            </article>

            <article class="gadget team-scores">
                <h3>Team Leaderboard</h3>
                <ul class="team-leaderboard">
                    <li class="team" v-for="team in teamScores">
                        <span class="team-name">{{team.name}}</span>
                        <span class="team-points">{{team.points|number_format}}</span>
                    </li>
                </ul>
            </article>

            <article class="gadget recent-scores">
                <h3>Recent Scores</h3>
                <ul class="recent-score-list">
                    <li class="recent-score" v-for="score in recent_scores">
                        <span class="recent-score-points">{{score.points|number_format}}</span>
                        <span class="recent-score-game">{{score.game.name}}</span>
                        <span class="recent-score-user">{{score.user.username}}</span>
                        <span class="recent-score-date">{{score.updated_at|date_diff}}
                    </li>
                </ul>
            </article>

            <article class="gadget top-player">
            <h3>Top Player</h3>
                <p class="top-player-name">{{topPlayer.name}}</p>
                <p class="top-player-team">{{topPlayer.team}}</p>
                <p class="top-player-points">{{topPlayer.points|number_format}}</p>
            </article>
        </main>
        {% endverbatim %}

        <script src="{{asset('js/dist/stream.min.js')}}"></script>
    </body>
</html>