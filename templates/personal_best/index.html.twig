{% extends 'base.html.twig' %}

{% block title %}Permanent Leaderboards{% endblock %}

{% block body %}
    <header>
        <h1>High Scores for {{website.name}} Games, Past &amp; Present</a>
    </header>
    <main>
        <section class="summary-group">
        {% for game in games %}
            {{
                include('game/_summary.html.twig', {
                    'game': game,
                    'high_score': game.personalBests|first,
                    'user_score': game.personalBests|filter(s => s.user is same as(app.user))|first
                })
            }}
        {% endfor %}
        </section>
    </main>
{% endblock %}
