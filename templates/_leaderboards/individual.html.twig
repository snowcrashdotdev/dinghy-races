<table>
    <thead>
        <h3>All Scores</h3>
        <tr>
            <th class="td-index">Rank</th>
            <th>Score</th>
            <th>Player</th>
            {% if not permanent_board is defined %}
                <th>Team</th>
            {% endif %}
            {% if not permanent_board is defined %}
                <th>Ranked Points</th>
                <th>Team Points</th>
            {% endif %}
            <th>Record</th>
            <th>Comment</th>
        </tr>
    </thead>
    <tbody>
    {% for score in scores %}
        {% if app.user and app.user is same as(score.user) %}
            {% set className = 'highlighted' %}
        {% else %}
            {% set className = '' %}
        {% endif %}
        <tr class="{{className}}" title="{{score.comment|e}}">
            <td class="td-index">{{ loop.index }}</td>
            <td>{{ score.points|number_format }}</td>
            <td><a href="{{path('profile_show', {'username': score.user})}}">{{ score.user.username }}</a></td>
            {% if not permanent_board is defined %}
                <td><a href="{{path('team_show', {'team': score.team.id})}}">{{score.team.name}}</a></td>
            {% endif %}
            {% if not permanent_board is defined %}
                <td class="text-right labeled-data ranked-points">{{score.rankedPoints}}</td>
                <td class="text-right labeled-data team-points">{{score.teamPoints}}</td>
            {% endif %}
            <td class="labeled-data score-recording">
                {% if score.screenshot %}
                    <a target="_blank" href="{{'/uploads/screenshots/' ~ score.screenshot}}">ðŸ“·</a>
                {% endif %}
                {% if score.videoUrl %}
                    <a target="_blank" href="{{score.videoUrl|e}}">ðŸ“¼</a>
                {% endif %}
            </td>
            <td class="{{ not score.comment ? 'comment-empty' }}">{{score.comment|default(' ')|e}}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>