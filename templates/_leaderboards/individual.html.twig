{% if scores|length %}
<table>
    <thead>
        <tr>
            <th class="td-index">Rank</th>
            <th>Score</th>
            <th>Player</th>
            {% if tournament %}
                <th>Team</th>
                <th>Ranked Points</th>
                <th>Team Points</th>
            {% endif %}
            <th class="text-right">Record</th>
            <th>Comment</th>
        </tr>
    </thead>
    <tbody>
    {% for score in scores %}
        <tr {{ score is same as(user_score) ? 'class="highlighted"'  }}>
            <td class="td-index">{{ loop.index }}</td>
            <td>{{ score.points|number_format }}</td>
            <td><a href="{{path('profile_show', {'username': score.user})}}">{{ score.user.username }}</a></td>
            {% if tournament %}
                <td><a href="{{path('team_show', {'id': score.team.id})}}">{{score.team.name}}</a></td>
            {% endif %}
            {% if tournament %}
                <td class="text-right labeled-data ranked-points">{{score.rankedPoints}}</td>
                <td class="text-right labeled-data team-points">{{score.teamPoints}}</td>
            {% endif %}
            <td class="labeled-data score-recording text-right">
                {% if score.screenshot %}
                    <a target="_blank" href="{{'/uploads/screenshots/' ~ score.screenshot}}">ðŸ“·</a>
                {% endif %}
                {% if score.videoUrl %}
                    <a target="_blank" href="{{score.videoUrl|e}}">ðŸ“¼</a>
                {% endif %}
                {% if score.replay %}
                    <a target="_blank" href="{{'/uploads/replays/' ~ score.replay}}">ðŸ“‚</a>
                {% endif %}
            </td>
            <td class="{{ not score.comment ? 'comment-empty' }}">{{score.comment|default(' ')|e}}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endif %}