{% macro responsive(config) %}
    {% set img_sizes = constant('App\\Service\\ImageUploader::IMAGE_SIZES') %}
    {% set prefix = constant('App\\Service\\ImageUploader::SIZE_PREFIX') %}
    {% set srcset = img_sizes|map(s => "#{config.path ~ config.file|split('.')|first ~ prefix ~ s ~ '.' ~ config.file|split('.')|last} #{s}w")|join(', ') %}

    <img class="{{config.classNames}}" src="{{config.path ~ config.file}}" srcset="{{srcset}}" sizes="{{config.sizes}}">
{% endmacro %}