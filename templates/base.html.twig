<!DOCTYPE html>
<html class="no-js" lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta http-equiv="robots" content="[noindex|nofollow]">
        <meta name="description" content="Competitive, team-based video game tournaments.">
        <title>Tournaments - {% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}<link rel="stylesheet" media="screen" href="{{ asset('/css/calice.css') }}">{% endblock %}
    </head>
    <body>
        {{ include('partials/flash.html.twig') }}
        <nav class="navbar bg-primary padding flex-row">
            {{ include('partials/navigation.html.twig') }}
            {% block navigation %}{% endblock %}
            {% if is_granted( 'ROLE_USER' )%}
                <a class="navbar-item push-right" href="{{ path('app_logout') }}">Log Out</a>
            {% endif %}
        </nav>
        {% block body %}{% endblock %}
        {% block footer %}{% endblock %}
        {% block javascripts %}
        <script>
        // Remove flash messages after they serve their purpose
        document.addEventListener('DOMContentLoaded', function(){
            var flashMessages = document.getElementsByClassName('flash')
            setTimeout(function(){
                for (var i = 0; i < flashMessages.length; i++) {
                    var flash = flashMessages.item(i)
                    flash.parentNode.removeChild(flash)
                }
            }, 12000)
        })
        </script>
        {% endblock %}
    </body>
</html>
