{% extends 'base.html.twig' %}

{% block title %}Game{% endblock %}

{% block body %}
    <h1>Game</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ game.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ game.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ game.description }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ game.year }}</td>
            </tr>
            <tr>
                <th>Manufacturer</th>
                <td>{{ game.manufacturer }}</td>
            </tr>
        </tbody>
    </table>

    <h2>Has appeared in:
    {% for tournament in game.tournaments %}
        <p>{{tournament.title}}</p>
    {% else %}
        <p>No tournaments.</p>
    {% endfor %}

    <a href="{{ path('game_index') }}">back to list</a>

    <a href="{{ path('game_edit', {'id': game.id}) }}">edit</a>

    {{ include('game/_delete_form.html.twig') }}
{% endblock %}
